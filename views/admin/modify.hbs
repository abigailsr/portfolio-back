<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
      crossorigin="anonymous"
    />
  </head>
  <body id="body-add">
    <div id="form-add">
      <form
        action="/admin/plus/modify"
        method="post"
        enctype="multipart/form-data"
      >
        <input type="hidden" name="id" value="{{libro.id}}" />
        <div class="mb-3 row">
          <input
            type="text"
            class="form-control"
            placeholder="Title"
            name="title"
            value="{{libro.title}}"
          />
        </div>
        <div class="mb-3 row">
          <input
            type="text"
            class="form-control"
            placeholder="Gender"
            name="gender"
            value="{{libro.gender}}"
          />
        </div>
        <div class="mb-3 row">
          <input
            type="text"
            class="form-control"
            placeholder="Author"
            name="author"
            value="{{libro.author}}"
          />
        </div>
        <div class="mb-3 row">
          <p>
            <label style="color: white;">
              image:
              <input
                type="file"
                class="form-control"
                name="image"
                id="image"
              /></label>
          </p>
          <p>
            <label style="color: white;">
              <input
                type="checkbox"
                name="img_delete"
                id="img_delete"
                value="1"
              />
              Delete current image?
              </label>
              <input
                type="hidden"
                name="img_original"
                value="{{libro.img_id}}"
              />
          </p>
        </div>
        <button type="submit" class="btn btn-primary">Modify</button>
      </form>
    </div>
    {{#if error}}
      <p>{{message}}</p>
    {{/if}}
  </body>
</html>