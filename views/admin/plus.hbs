    
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
       <!--FILA 1-->
        <div name="plus" id="contenedor" >
                <div id="box1" >
                    <div id="box2">
                    <p id="p1">Plus</p>
                    <p id="p2">Recommend me a book</p>
                    </div>
                </div>
            </div>
 
    <!--FILA 2-->
    <div class="row" id="fila2">
        <div class="col-7">
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-info" href='/admin/plus/add'  id="boton-new">
                <i class="fa fa-plus " aria-hidden="true"> + New
                </i>
            </a>
        </div>
    </div>
        <!--FILA 3-->
        
        <table class="table" id="la-tabla">
            <thead>
                <tr class="table-dark">
                <th scope="col">#</th>
                <th scope="col">title</th>
                <th scope="col">gender</th>
                <th scope="col">author</th>
                <th scope="col">image</th>
                <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each libros}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{title}}</td>
                    <td>{{gender}}</td>
                    <td>{{author}}</td>
                    <td>{{{image}}}</td>
                    <td class="text-end">
                        <a class="btn btn-secondary" href='/admin/plus/modify/{{id}}' ><i class="fa fa-pencil" aria-hidden="true">Modify</i></a>
                        <a class="btn btn-secondary" href='/admin/plus/delete/{{id}}' ><i class="fa fa-trash" aria-hidden="true">Delete</i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        
</body>
</html>